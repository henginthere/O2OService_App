<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="30dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_ssafybucks"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용 알림"
        android:textSize="32dp"
        android:textColor="@color/coffee_dark_brown"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_ssafybucks"/>

    <TextView
        android:id="@+id/tv_noti_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매장 내 이용시 테이블의 NFC를 태그하면 해당 테이블로 음료를 가져다드립니다."
        android:textColor="@color/coffee_dark_brown"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_noti_title"/>

    <TextView
        android:id="@+id/tv_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문하신 음료"
        android:textSize="32dp"
        android:textColor="@color/coffee_dark_brown"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_noti_content"/>

    <ImageView
        android:id="@+id/img_stuff"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/coffee1"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:background="@drawable/round_border"
        app:layout_constraintTop_toBottomOf="@id/tv_order_title" />

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아메리카노"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/coffee_dark_brown"
        app:layout_constraintStart_toStartOf="@id/img_stuff"
        app:layout_constraintTop_toBottomOf="@id/tv_order_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4000원"
        android:textSize="20dp"
        android:textColor="@color/coffee_dark_brown"
        app:layout_constraintStart_toStartOf="@id/img_stuff"
        app:layout_constraintTop_toBottomOf="@id/tv_order_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="@color/purple_500"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
